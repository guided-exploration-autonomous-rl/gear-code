<?xml version="1.0" ?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">

  <xacro:macro name="plate" params="*origin *inertial">

    <joint name="plate" type="fixed">
      <xacro:insert_block name="origin"/>
      <parent link="$(arg robot_name)/base_link"/>
      <child link="$(arg robot_name)/plate_link"/>
    </joint>

    <link name="$(arg robot_name)/plate_link">
      <visual>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <geometry>
          <mesh filename="package://interbotix_xslocobot_descriptions/meshes/locobot_meshes/${base_type}_version/locobot_base_plate.stl" scale="${mesh_scale}"/>
        </geometry>
        <material name="interbotix_black"/>
      </visual>
      <collision>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <geometry>
          <mesh filename="package://interbotix_xslocobot_descriptions/meshes/locobot_meshes/${base_type}_version/locobot_base_plate.stl" scale="${mesh_scale}"/>
        </geometry>
      </collision>
      <xacro:insert_block name="inertial"/>
    </link>

    <gazebo reference="$(arg robot_name)/plate_link">
      <material>Custom/Interbotix</material>
    </gazebo>

  </xacro:macro>

</robot>
